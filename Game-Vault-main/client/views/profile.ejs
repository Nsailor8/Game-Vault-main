<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', { pageTitle: 'Profile' }) %>
<body>
    <%- include('partials/header') %>
  <div class="container">
    <!-- Main Content -->
    <main id="mainContent" class="main-content">
      <!-- Profile Section -->
      <section id="profileSection" class="content-section active">
        <div class="profile-header">
          <div class="profile-avatar">
            <i class="fas fa-user-circle"></i>
          </div>
          <div class="profile-info">
            <h2 id="profileUsername">Loading...</h2>
            <p id="profileEmail">Loading...</p>
            <p id="profileJoinDate">Loading...</p>
          </div>
          <div class="profile-actions">
            <button id="editProfileBtn" class="btn btn-secondary">Edit Profile</button>
          </div>
        </div>

        <div class="profile-stats">
          <div class="stat-card">
            <i class="fas fa-gamepad"></i>
            <h3 id="totalGames">0</h3>
            <p>Games Played</p>
          </div>
          <div class="stat-card">
            <i class="fas fa-clock"></i>
            <h3 id="totalPlaytime">0</h3>
            <p>Hours Played</p>
          </div>
          <div class="stat-card">
            <i class="fas fa-star"></i>
            <h3 id="avgRating">0</h3>
            <p>Avg Rating</p>
          </div>
          <div class="stat-card">
            <i class="fas fa-trophy"></i>
            <h3 id="achievementCount">0</h3>
            <p>Achievements</p>
          </div>
        </div>
      </section>
    </main>
  </div>
    <%- include('partials/loginModal') %>
  <script src="/app.js"></script>
  <script src="/profile.js"></script>
  <script>
    // Initialize the app when the page loads
    document.addEventListener('DOMContentLoaded', () => {
      console.log('Profile page - DOM Content Loaded');
      // The app.js will handle session checking and show/hide login modal as needed
    });
  </script>
</body>
</html>
